{{!
    @template core/welcome

    This template renders welcome message.

    Example context (json):
    {
        "welcomemessage": "welcomemessage"
    }
}}
{{#welcomemessage}}
  <div class="d-flex flex-column">
      <h2 class="mb-3 mt-3">Hello <span class="ast-welcome-gradient">{{.}}</span></h2>
      <p class="ast-welcome-message astutis">
        Welcome to the Astutis Learning Campus, your gateway to world class
        training.
      </p>
      <p class="ast-welcome-message amazon d-none">
      Welcome to your NEBOSH Diploma training.
      </p>
    </div>
{{/welcomemessage}}
